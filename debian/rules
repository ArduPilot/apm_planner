#!/usr/bin/make -f
# Sample debian/rules file - for GNU Hello.
# Copyright 1994,1995 by Ian Jackson.
# I hereby give you perpetual unlimited permission to copy,
# modify and relicense this file, provided that you do not remove
# my name from the file itself. (I assert my moral right of
# paternity under the Copyright, Designs and Patents Act 1988.)
# This file may have to be extensively modified
# 
# Modified for use with APMPlanner 2 by Stephen Dade

package = APM Planner 2
docdir = debian/tmp/usr/share/doc/$(package)

CC = gcc
CFLAGS = -g -Wall
INSTALL_PROGRAM = install

ifeq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O2
endif
ifeq (,$(findstring nostrip,$(DEB_BUILD_OPTIONS)))
	INSTALL_PROGRAM += -s
endif

build:
	$(checkdir)
	#GIT_VERSION=$(git describe --abbrev=1)
	#git-dch -a --ignore-branch --new-version="2.0.0.$GIT_VERSION"
	qmake-qt4 PREFIX=debian/tmp/usr qgroundcontrol.pro
	#cmake -DCMAKE_INSTALL_PREFIX=/usr .
	#$(MAKE) CC="$(CC)" CFLAGS="$(CFLAGS)" --jobs=3
	touch build

clean:
	$(checkdir)
	rm -f build
	#cmake -DCMAKE_INSTALL_PREFIX=/usr .
	qmake-qt4 PREFIX=/usr qgroundcontrol.pro
	[ ! -f Makefile ] || $(MAKE) clean
	rm -r Makefile
	rm -rf *~ debian/tmp debian/*~ debian/files* debian/substvars

binary-indep: checkroot build
	$(checkdir)
	# There are no architecture-independent files to be uploaded
	# generated by this package. If there were any they would be
	# made here.

binary-arch: checkroot build
	$(checkdir)
	rm -rf debian/tmp
	install -d debian/tmp/DEBIAN "$(docdir)"
	cp debian/control debian/tmp/DEBIAN
	install -m 755 debian/postinst debian/postrm debian/tmp/DEBIAN
	#sed -i "s/VERSION/$GIT_VERSION/g" debian/tmp/DEBIAN/control
	$(MAKE) install CC="$(CC)" CFLAGS="$(CFLAGS)" --jobs=3
	#$(MAKE) DESTDIR=$(CURDIR)/debian/tmp $(INSTALL_PROGRAM)
	cp -a ./license.txt "$(docdir)"
	cp -a debian/changelog "$(docdir)/changelog"
	#cp -a ChangeLog "$(docdir)/changelog"
	cd "$(docdir)" && gzip -9 changelog
	dpkg-shlibdeps debian/tmp/usr/bin/apmplanner2
	dpkg-gencontrol -isp
	chown -R root:root debian/tmp
	chmod -R u+w,go=rX debian/tmp
	dpkg-deb --build debian/tmp ..

define checkdir
	test -f qgroundcontrol.pro -a -f debian/rules
endef

binary: binary-indep binary-arch

checkroot:
	$(checkdir)
	test $$(id -u) = 0

.PHONY: binary binary-arch binary-indep clean checkroot
